<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rui.location.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:adjustViewBounds="true"
        android:id="@+id/textLocation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:adjustViewBounds="true"
        android:id="@+id/connection" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputLocation"
        android:layout_marginTop="39dp"
        android:hint="Enter a location (optional)"
        android:layout_below="@+id/logo"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_row="0"
        android:layout_column="3"
        android:background="#d2df08a2"
        android:minHeight="75dp"
        android:minWidth="180dp"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mood1"
        android:background="#b9080000"
        android:minWidth="265dp"
        android:minHeight="210dp"
        android:adjustViewBounds="true"
        android:layout_below="@+id/inputLocation"
        android:layout_alignParentStart="true"
        android:layout_marginTop="84dp"
        android:text="#happy"
        android:textColor="#fefcfc"
        android:textSize="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mood2"
        android:background="#b9080000"
        android:minWidth="265dp"
        android:minHeight="210dp"
        android:layout_alignTop="@+id/mood1"
        android:layout_alignParentEnd="true"
        android:text="#Sad"
        android:adjustViewBounds="true"
        android:textSize="50dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mood3"
        android:background="#b9080000"
        android:minWidth="265dp"
        android:minHeight="210dp"
        android:layout_alignTop="@+id/mood4"
        android:layout_alignParentEnd="true"
        android:textSize="50dp"
        android:adjustViewBounds="true"
        android:text="#adventours"
        android:textColor="#fffefe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mood4"
        android:background="#b9080000"
        android:minWidth="265dp"
        android:minHeight="210dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp"
        android:adjustViewBounds="true"
        android:text="#Healthy"
        android:textColor="#fffdfd" />


</RelativeLayout>
